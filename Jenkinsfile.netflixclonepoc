pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
    }

    stages {
        stage('Dependency check using OWASP') {
            steps {
                   dependencyCheck additionalArguments: '', odcInstallation: 'dp-check'
                   dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
            }
        }
    }
}
